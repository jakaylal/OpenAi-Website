<!doctype html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>OpenAI Chat Interface</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #0d0d0d;
        color: #fff;
      }
      .chat-container {
        width: 100%;
        max-width: 800px;
        background: #1a1a1a;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
      }
      .message {
        padding: 12px 16px;
        border-radius: 10px;
        margin-bottom: 10px;
        max-width: 80%;
        word-wrap: break-word;
      }
      .user {
        background: #0d6efd;
        align-self: flex-end;
        text-align: right;
      }
      .assistant {
        background: #343a40;
        align-self: flex-start;
      }
      .chat-box {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 20px;
        max-height: 60vh;
        overflow-y: auto;
      }
      textarea {
        resize: none;
        border-radius: 8px;
      }

      .message {
    padding: 12px 16px;
    border-radius: 10px;
    margin-bottom: 10px;
    max-width: 80%;
    word-wrap: break-word;
    white-space: pre-wrap; /* ‚Üê add this line */
  }

    </style>
  </head>

  <body>
    <div class="chat-container">
      <h2 class="text-center mb-4">OpenAI Web Assistant</h2>

     <div class="chat-box">
  <% if (chatHistory && chatHistory.length > 0) { %>
    <% chatHistory.forEach(msg => { %>
      <div class="message <%= msg.role %>">
        <strong><%= msg.role === 'user' ? 'You' : 'Assistant' %>:</strong>
        <pre style="white-space: pre-wrap;"><%= msg.text %></pre>
      </div>
    <% }) %>
  <% } else { %>
    <p class="text-muted">No previous messages yet.</p>
  <% } %>
</div>


      <form action="/" method="POST">
        <div class="mb-3">
          <textarea
            name="prompt"
            class="form-control"
            rows="3"
            placeholder="Type your message..."
            required
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100">Send</button>
      </form>

      <% if (error) { %>
        <div class="alert alert-danger mt-3"><%= error %></div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
